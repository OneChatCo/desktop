{
	"name": "desktop",
	"version": "2.0.5",
	"private": true,
	"description": "One Chat desktop shell with tabs and auto-updater",
	"main": "dist/main/main.js",
	"author": "Ganni <gannicus@orbitus.ca> (https://onech.at/)",
	"license": "MIT",
	"scripts": {
		"clean": "rimraf dist",
		"clean:win": "if exist dist rmdir /s /q dist",
		"copy:assets": "copyfiles -u 2 \"src/renderer/*.html\" \"src/renderer/icon.png\" dist/renderer && copyfiles \"build/*\" dist/",
		"watch:html": "chokidar \"src/renderer/index.html\" -c \"npm run copy:html\"",
		"tailwind:build": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/app.css",
		"tailwind:watch": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/app.css --watch",
		"build": "npm run clean && tsc -p tsconfig.json && npm run copy:assets && npm run tailwind:build",
		"build:win": "npm run clean:win && tsc -p tsconfig.json && npm run copy:assets && npm run tailwind:build",
		"dev": "concurrently -k \"tsc -w\" \"npm:watch:html\" \"npm:tailwind:watch\" \"wait-on dist/main/main.js dist/preload/index.js dist/renderer/renderer.js dist/renderer/index.html dist/renderer/app.css && electron .\"",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"dist:win": "electron-builder --win",
		"dist:mac": "electron-builder --mac",
		"dist:linux": "electron-builder --linux"
	},
	"dependencies": {
		"discord-rpc": "^4.0.1",
		"electron-updater": "^6.6.2"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.12",
		"@tailwindcss/postcss": "^4.1.12",
		"@types/discord-rpc": "^4.0.9",
		"autoprefixer": "^10.4.21",
		"chokidar-cli": "^3.0.0",
		"concurrently": "^9.0.1",
		"copyfiles": "^2.4.1",
		"electron": "^37.3.1",
		"electron-builder": "^26.0.12",
		"postcss": "^8.5.6",
		"rimraf": "^6.0.1",
		"tailwindcss": "^4.1.12",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"wait-on": "^8.0.4"
	}
}
